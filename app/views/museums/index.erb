
<div class="show_search_form">
  <%= form_tag(search_path) do %>
  <%= label_tag(:title, "Search for a Museum") %>
    <%= text_field_tag :title, params[:title] %>
    <%= submit_tag 'Search' %>
  <% end %>
</div>


<h1>Museum Index</h1>

<% if flash[:message] %>
<%= flash[:message] %>
<% end %>

<div><%= button_to "Queue", queues_index_path %></div>

<ul>
<% @museums.each do |museum| %>
<ul> <%= button_to museum.title, museum, method: :get, class: 'index_button' %> </ul> <br>
<div class= "index_add_button"><%= button_to "Add Museum", add_museum_to_queue_path, {method: :patch, params: {museum_id: museum.id, museum_title: museum.title}} %></div>
<% end %>
</ul>



<%= button_to "Back to Home", home_index_path, method: :get %>
