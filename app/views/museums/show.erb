<div class="museum_container">
  <div><%= button_to "Queue", queues_index_path, class: 'show_queue_button'%></div>

  <div class="museum_profile">

    <h1><%= @museum.title %></h1>
    <p><%= @museum.address %></p>
    <p><%= @museum.zip.split(".")[0] %></p>
    <p><%= link_to @museum.url, @museum.url%></p>
    <p><%= @museum.phone %></p>

    <p><%= button_to "Add Museum", add_museum_to_queue_path, {method: :patch, params: {museum_id: @museum.id, museum_title: @museum.title}} %></p>

  </div>


  <div class="show_search_form">
    <%= form_tag(search_path) do %>
    <%= label_tag(:title, "Search for a Museum") %>
      <%= text_field_tag :title, params[:title] %>
      <%= submit_tag 'ðŸ”Ž', class: 'submit_button' %>
    <% end %>
  </div>

</div>
